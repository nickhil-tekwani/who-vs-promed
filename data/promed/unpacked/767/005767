Kailahun = 0, Kenema = 10, Kono = 0, Bombali = 0, Kambia = 0, Koinadugu = 0, Port Loko = 31, Tonkolili = 1, Bo = 0, Bonthe = 0, Moyamba = 0, Pujehun = 0, [Freetown:] Western Area Urban = 5, Western Area Rural = 2

